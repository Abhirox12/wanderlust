<% if(success && success.length) { %>
    <div class="alert alert-success col-6 offset-3 mt-2 text-center py-1 alert-dismissible fade show" role="alert">
        <p class="m-0">
            <%= success %>
        </p>
        <button type="button" class="btn-close py-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(error && error.length) { %>
            <div class="alert alert-danger col-6 offset-3 mt-2 text-center py-1 alert-dismissible fade show"
                role="alert">
                <p class="m-0">
                    <%= error %>
                </p>
                <button type="button" class="btn-close py-2" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
