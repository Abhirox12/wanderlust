<% layout('/Layouts/boilerplate.ejs') -%>
    <script>
        mapboxgl.accessToken = "<%= mapToken %>";
        const coordinates = <% -JSON.stringify(List.geometry.coordinates) %>;
        const locations = <% -JSON.stringify(List.location) %>;
    </script>

    <body>
        <h1 class="col-md-6  offset-md-3 my-4 ">
            <%= List.title %>
        </h1>

        <div class="row ">
            <div class="col-md-6 col-sm-4 offset-sm-0 offset-md-3">
                <div class="card Listing-card" style="width:25rem;">
                    <img src="<%=List.image.url%>" class="card-img-top" alt="...">
                    <div class="card-body px-0">
                        <p class="card-text">
                            Own by <%= List.owner.username %>
                        </p>
                        <p class="card-text">
                            <%= List.description %>
                        </p>
                        <p class="card-text">
                            <%= List.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text">
                            <%= List.location %>

                        </p>
                        <p class="card-text">
                            <%= List.country %>
                        </p>
                    </div>

                    <% if (currUser && currUser._id.equals(List.owner._id)){ %>

                        <div class="btns my-4">
                            <form action="/Listing/<%=List._id %>/update" method="get">
                                <button class="btn btn-dark editbtn">Update</button>
                            </form>
                            <form action="/Listing/<%=List._id%>?_method=DELETE" method="post">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="d-flex w-100 justify-content-center">
                <hr class="w-75">
            </div>


            <% if(List.review.length) {%>
                <div class="row col-md-6  offset-md-3 my-4 ">
                    <h1 class="my-4 ">
                        Reviews
                    </h1>
                    <% for (let review of List.review) { %>

                        <div class="card border-dark m-3" style="max-width: 15rem;">
                            <div class="card-body text-dark">
                                <h5 class="card-title">
                                    @<%= review.name.username %>
                                </h5>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                </p>

                            </div>
                            <% if (currUser && currUser._id.equals(review.name._id)){ %>
                                <div class="btns my-4">
                                    <form action="/Listing/<%=List._id%>/review/<%=review._id%>?_method=DELETE"
                                        method="post">
                                        <button class=" mb-3 btn btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                                <% } %>
                        </div>

                        <% } %>
                </div>
                <% } %>
        </div>
        <% if( currUser ){ %>
            <div class="row col-md-6 my-3 col-sm-4 offset-sm-0 offset-md-3">

                <form action="/Listing/<%=List._id%>/review" method="post" novalidate class="needs-validation">
                    <div class=" my-3">

                        <label for="range3" class="form-label">Rating</label>
                        <!-- <input type="range" name="" min="1" max="5" class="form-range" id="range3"><br> -->
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="my-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" id="comment" cols="50" rows="5" required
                            class="form-control"></textarea>
                        <div class="invalid-feedback">
                            please fill the comment
                        </div>
                    </div>
                    <button type="submit" class=" my-2 btn btn-outline-dark">Submit</button>
                </form>
            </div>
            <% } else { %>
                <div class="row col-md-6 my-3 col-sm-4 offset-sm-0 offset-md-3">

                    <p>if you want to add a review&nbsp;&nbsp;<a href="/login/<%=List._id%>">click here</a></p>
                </div>

                <% } %>
                    <div class="d-flex w-100 justify-content-center">
                        <hr class="w-75">
                    </div>
                    <div class="row col-md-6 my-3 col-sm-4 offset-sm-0 offset-md-3">

                        <h3>Our location</h3>
                        <div id="map"></div>
                    </div>
                    <script src="/js/map.js"></script>

    </body>