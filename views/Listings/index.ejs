<% layout('/Layouts/boilerplate.ejs') -%>

  <style>
    .filters {
      display: flex;
      justify-content: center;
    }


    .filtericons {
      display: flex;
      justify-content: center;
      margin-top: 6px;
    }

    .filtericons i:hover {
      animation-name: fa-beat;
      animation-delay: var(--fa-animation-delay, 0s);
      animation-direction: var(--fa-animation-direction, normal);
      animation-duration: var(--fa-animation-duration, 1s);
      animation-iteration-count: var(--fa-animation-iteration-count, infinite);
      animation-timing-function: var(--fa-animation-timing, ease-in-out);
      cursor: pointer;
    }

    .switch {
      display: flex;
      justify-content: center;
      align-items: center;
      border: 1px solid gray;
      border-radius: 10px;
      padding: 3px 10px;
      margin-top: 5px;
    }

    .taxes {
      display: none;
    }
  </style>

  <body>
    <div class="filters mt-4 gap-4">
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-mountain-city"></i>
        </div>
        <p>Mountain city</p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-brands fa-fort-awesome"></i>
        </div>
        <p>Historical places</p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-city"></i>
        </div>
        <p>famous cities</p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-tree"></i>
        </div>
        <p>Tree houses </p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-snowflake"></i>
        </div>
        <p> Snowfall places </p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-place-of-worship"></i>
        </div>
        <p> Religious places </p>
      </div>
      <div class="filter">
        <div class="filtericons">
          <i class="fa-solid fa-parachute-box"></i>
        </div>
        <p> Sports & Activities </p>
      </div>
      <label class="form-check-label" for="switchCheckChecked">
        <div class="switch">
          <div class="form-check form-switch form-check-reverse">
            including taxes
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
          </div>
      </label>
    </div>
    </div>
    <div class="row row-cols-lg-3 row-col-md-2 row-col-sm-1 p-1 Listings  justify-content-center ">

      <% for (let List of Lists){ %>
        <div class="card Listing-card p-0 mx-3 my-4" style="width:17rem;">
          <a href="/Listing/<%=List._id%>">
            <img src="<%= List.image.url %>" style="height:14rem;" class="card-img-top" alt="...">
            <div class="card-img-overlay">
            </div>
            <div class="card-body px-0">
              <p class="card-text fw-bolder text-secondary">
                <%=List.title %>
              </p>
              <p class="card-text text-secondary">
                <%= List.price.toLocaleString("en-IN") %>/night
                  <i class="taxes"> + 10% taxes</i>
              </p>
            </div>
          </a>
        </div>
        <% } %>
    </div>

  </body>
  <script>
    let switchbox = document.querySelector(".switch");
    let taxes = document.querySelectorAll(".taxes")
    switchbox.addEventListener("click", () => {
      for (tax of taxes) {
        if (tax.style.display !== "inline") {
          tax.style.display = "inline";
        } else {
          tax.style.display = "none"
        }
      }

    })
  </script>